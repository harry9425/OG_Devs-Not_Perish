<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inventoryview">

    <TextView
        android:id="@+id/in_pid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="vhbsahjvhjvhjcsvhjas"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/in_image"
        app:layout_constraintStart_toStartOf="@+id/in_image"
        app:layout_constraintTop_toBottomOf="@+id/in_image" />

    <TextView
        android:id="@+id/in_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Food name"
        android:textColor="#43abb6"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/in_image"
        app:layout_constraintStart_toStartOf="@+id/in_image"
        app:layout_constraintTop_toBottomOf="@+id/in_pid" />

    <TextView
        android:id="@+id/in_expiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Food name"
        android:textColor="#43abb6"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/in_image"
        app:layout_constraintStart_toStartOf="@+id/in_image"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <TextView
        android:id="@+id/in_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Food name"
        android:textColor="#43abb6"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/in_image"
        app:layout_constraintStart_toStartOf="@+id/in_image"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <ImageView
        android:id="@+id/in_image"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginEnd="15dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageButton20"
        app:layout_constraintTop_toBottomOf="@+id/imageButton20"
        app:srcCompat="@drawable/fooddefaultpic" />

    <ImageButton
        android:id="@+id/imageButton20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="#43abb6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <ImageButton
        android:id="@+id/imageButton22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="delete"
        android:tint="#43abb6"
        app:layout_constraintEnd_toEndOf="@+id/in_image"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Expiry date"
        app:layout_constraintEnd_toEndOf="@+id/in_name"
        app:layout_constraintStart_toStartOf="@+id/in_name"
        app:layout_constraintTop_toBottomOf="@+id/in_name" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="upload date"
        app:layout_constraintEnd_toEndOf="@+id/in_name"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/in_name"
        app:layout_constraintTop_toBottomOf="@+id/in_expiry" />

    <ImageView
        android:id="@+id/in_barcode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/in_image"
        app:layout_constraintStart_toStartOf="@+id/in_image"
        app:layout_constraintTop_toBottomOf="@+id/in_date"
        app:srcCompat="@drawable/barcodedefaultlogo" />

</androidx.constraintlayout.widget.ConstraintLayout>