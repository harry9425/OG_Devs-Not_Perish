<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_page">

    <EditText
        android:id="@+id/loginpage_enterno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Enter your mobile number"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.239" />

    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center"
        app:defaultCode="91"
        app:layout_constraintBottom_toBottomOf="@+id/loginpage_enterno"
        app:layout_constraintEnd_toStartOf="@+id/loginpage_enterno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loginpage_enterno" />

    <Button
        android:id="@+id/loginpage_sendotpbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="send otp"
        app:layout_constraintEnd_toEndOf="@+id/loginpage_enterno"
        app:layout_constraintStart_toStartOf="@+id/loginpage_enterno"
        app:layout_constraintTop_toBottomOf="@+id/loginpage_enterno" />
</androidx.constraintlayout.widget.ConstraintLayout>