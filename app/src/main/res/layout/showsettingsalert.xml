<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/showsetting_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Your location : bhhsh"
        android:textAlignment="textStart"
        android:textColor="#43abb6"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/showsetting_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/showsetting_name"
        app:layout_constraintTop_toBottomOf="@+id/showsetting_name" />

    <ImageButton
        android:id="@+id/bkbk_ss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="#43abb6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/showsetting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="Welcome, Hitansh agrawal"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bkbk_ss"
        app:layout_constraintTop_toBottomOf="@+id/bkbk_ss" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Visit our Website:"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/inventory_showsetting"
        app:layout_constraintTop_toBottomOf="@+id/inventory_showsetting" />

    <ImageButton
        android:id="@+id/inventory_showsetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000000"
        app:layout_constraintStart_toStartOf="@+id/showsetting_location"
        app:layout_constraintTop_toBottomOf="@+id/showsetting_location"
        app:srcCompat="@drawable/ic_baseline_inventory_24" />

    <ImageButton
        android:id="@+id/donation_showsetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/inventory_showsetting"
        app:layout_constraintStart_toEndOf="@+id/inventory_showsetting"
        app:layout_constraintTop_toTopOf="@+id/inventory_showsetting"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_card_giftcard_24" />

    <Button
        android:id="@+id/so_ss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#43abb6"
        android:text="Signout"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/showsetting_webview"
        app:layout_constraintStart_toStartOf="@+id/showsetting_webview"
        app:layout_constraintTop_toBottomOf="@+id/showsetting_webview" />

    <WebView
        android:id="@+id/showsetting_webview"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView27"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

</androidx.constraintlayout.widget.ConstraintLayout>